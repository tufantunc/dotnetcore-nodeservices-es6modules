FROM microsoft/dotnet:2.1-sdk AS builder
WORKDIR /appsrc
COPY . .
WORKDIR /RunJSInDotNetCoreMvc
RUN dotnet publish -c Release

FROM microsoft/dotnet:2.1-aspnetcore-runtime
WORKDIR /RunJSInDotNetCoreMvc
COPY --from=builder /appsrc/RunJSInDotNetCoreMvc/RunJSInDotNetCoreMvc/bin/Release/netcoreapp2.1/ .
CMD ASPNETCORE_URLS=http://*:$PORT dotnet RunJSInDotNetCoreMvc.dll